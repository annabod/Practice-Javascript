<body>
	<div class="leftbutton" onclick=clickbutton2()>
			<input type="button" value="<">
	</div>
	<div class="images">
		<div class="align-img" id="align-img">
			<img class="img1" src="1.jpeg" width="300">
			<img class="img2" src="2.jpg" width="300">
		</div>
	</div>
	<div class="rightbutton" onclick=clickbutton1()>
			<input type="button" value=">">
	</div>
	<script type="text/javascript">
		function clickbutton1() {
			document.getElementById("align-img").className = "click-button-left";
		}
		function clickbutton2() {
			document.getElementById("align-img").className = "click-button-right";
		}
	</script>

